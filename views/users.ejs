<body>
    <div class="container mt-4">
        <h2>Alumni Management Dashboard</h2>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Graduation Year</th>
                        <th scope="col">Major</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function(user, index) { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= user.firstName %></td>
                            <td><%= user.lastName %></td>
                            <td><%= user.email %></td>
                            <td><%= user.graduationYear %></td>
                            <td><%= user.major %></td>
                            <td>
                                <a href="/users/<%= user._id %>/update"><button class="btn btn-primary btn-sm">Edit</button></a>
                                <a href="/users/<%= user._id %>/delete"><button class="btn btn-danger btn-sm">Delete</button></a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <a href="/users/create"><button class="btn btn-success">Add New Alumni</button></a>
    </div>
    <!-- Bootstrap JavaScript and other necessary scripts -->
</body>
